#!/bin/bash
huebert_id=`docker ps -f name=huebert_huebert_1 --format "{{.ID}}"`

echo "Starting Cassandra container ..."
docker start huebert_cassandra_1

echo "Starting RabbitMQ container ..."
docker start huebert_rabbitmq_1

echo "Starting Hubert container ..."
if [ -n $huebert_id ]; then
  docker start huebert_huebert_1
else
  docker run --name huebert_huebert_1 -itd \
    huebert_huebert:latest npm start
fi
