#!/bin/bash
cassandra_id=`docker ps -f name=huebert_cassandra_1 --format "{{.ID}}"`
rabbitmq_id=`docker ps -f name=huebert_rabbitmq_1 --format "{{.ID}}"`
huebert_id=`docker ps -f name=huebert_huebert_1 --format "{{.ID}}"`

echo "Stopping Hubert container ..."
if [ -n $huebert_id ]; then
  docker stop $huebert_id
fi

echo "Stopping Cassandra container ..."
if [ -n $cassandra_id ]; then
  docker stop $cassandra_id
fi

# Initialize RabbitMQ
echo "Stopping RabbitMQ container ..."
if [ -n $rabbitmq_id ]; then
  docker stop $rabbitmq_id
fi
